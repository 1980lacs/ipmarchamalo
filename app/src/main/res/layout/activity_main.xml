<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/xpo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/tv_linea"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/tv_mesa"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <Spinner
            android:layout_margin="20dp"
            android:id="@+id/sp_lineas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Spinner>

        <Spinner
            android:id="@+id/sp_mesas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:textAlignment="center">

        </Spinner>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/btn_cargar"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/bk_boton_plano"
        android:stateListAnimator="@null"
        android:text="@string/btn_cargar"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="3">

        <TableRow
            android:background="@android:color/black">

            <TextView
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/tv_dispositivo"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/tv_direccion_ip"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Impresora Envio"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/tv_envio"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Impresora Tapaprecios"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Impresora facturas"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/tv_ticket"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Reader"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/tv_reader"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Equipo"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/tv_equipo"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </TableRow>

    </TableLayout>

</LinearLayout>